doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Dashboard
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/styles.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css')
style.
  body {
  background-color: whitesmoke;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  .navbar {
  background-color: rgb(55, 55, 59);
  color: rgb(230, 220, 220);
  padding: 1.5rem;
  min-height: 100vh;
  }
  .navbar h3 {
  color: rgb(189, 186, 186);
  margin-bottom: 2rem;
  }
  .navbar a {
  color: rgb(224, 216, 216);
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  border-radius: 0.375rem;
  margin-bottom: 0.5rem;
  transition: background 0.2s;
  }
.container-fluid
  .row
    nav.col-md3.col-lg-2.d-md-block.navbar
      div
        h3 Dashboard
        a.active(href='#')
          i.fa-solid.fa-house
          button.btn.btn-outline-primary.w-100.text-start
            | Home
          a.active(href='#')
            i.fa-solid.fa-suitcase
            button.btn.btn-outline-primary.w-100.text-start
              | revenue
            a.active(href='#')
              i.fa-solid.fa-truck
              button.btn.btn-outline-primary.w-100.text-start
                | stock
              a.active(href='/logout')
                i.fa-solid.fa-arrow-right-long
                button.btn.btn-outline-secondary.w-100.text-start
                  | Log out
                a.btn.btn-danger(href='#')
                  i.fa-solid.fa-share-from-square
                  |                                         Request feeds
                a.btn.btn-success(href='#')
                  i.fa-solid.fa-pen-to-square
                  |                                         Request chicks
    main.col-md-9.ms-sm-auto.c0l-lg-10.px-md-4.py-4
      h1.mb-4.fw-bold
        | Welcome back,
        span.text-primary Shimmy
      .row.g-4.mb-4
        .col-sm-6.col.-lg-3.d-flex
          .card.shadow-sm.h-100.w-100
            .card-body
              h6.text-muted chicks
              h3.fw-semibod 100
              span.badge.bg-success
                i.fa-solid.fa-house
                |                                     this month
        .col-sm-6.col.-lg-3.d-flex
          .card.shadow-sm.h-100.w-100
            .card-body
              h6.text-muted Revenue
              h3.fw-semibod UGX 200000
              span.badge.bg-primary
                i.fa-solid.fa-suitcase
                |                                     this month
        .col-sm-6.col.-lg-3.d-flex
          .card.shadow-sm.h-100.w-100
            .card-body
              h6.text-muted feed stock
              h3.fw-semibod 50 kgs
              span.badge.bg-danger
                i.fa-solid.fa-truck
                |                                     this month
        .col-sm-6.col.-lg-3.d-flex
          .card.shadow-sm.h-100.w-100
            .card-body
              h6.text-muted orders
              h3.fw-semibod 15
              span.badge.bg-success
                i.fa-solid.fa-user
                |                                     this month
      h2.mb-3.fw-semibold Recent transcations
      .table-responsive
        table.table.table-stripped.align-middle
          thead.table-dark
            tr
              th #
              th activity
              th Date
              th Time
          tbody
            tr
              td 1
              td purchased 5kgs of feeds
              td 02/07/2025
              td
                span.badge-bg-primary
                  i.fa-solid.fa-alarm-clock
                  |                                         08:00am
            tr
              td 2
              td order for 5 local exotic chicks
              td 13/07/2025
              td
                span.badge-bg-primary
                  i.fa-solid.fa-alarm-clock
                  |                                         03:00pm
            tr
              td 3
              td payment received via mobile money
              td 18/07/2025
              td
                span.badge-bg-primary
                  i.fa-solid.fa-alarm-clock
                  |                                         04;00pm
            tr
              td 4
              td stock alert
              td 20/07/2025
              td
                span.badge-bg-primary
                  i.fa-solid.fa-alarm-clock
                  |                                         10;00am
script(src='/js/scripts.js')

