doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title young4chicks
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/styles.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' integrity='sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==' crossorigin='anonymous' referrerpolicy='no-referrer')
.container
  .row
    .col-2
    .col-6
      h3.mt-5 Welcome to Young4Chicks
      .card.border-primary.mt-3(id='request chicks')
        .card-header.bg-primary.text-white
          | request for chicks
        .card-body
          form(action='/requestchicks' method='post')
            .mb-3
              label.form-label(for='name') full name
              input#fullname.form-control(
                name="full_name"
                type='text')
            div
            .mb-3
              select.form-select(
                name="chicksage"
                required='')
                option(value='') Choose chicksage
                option(value='0-6 weeks') 0-6 weeks
                option(value='6 weeks-6 months') 6 weeks-6 months 
                option(value='6months-beyond') 6 months -beyond
            .mb-3
              label.form-label(for='phone number') Phone number
              input#phonenumber.form-control(
                name="phone_number"
                required=""
                type='text')
            .mb-3
              select.form-select(
                name="chicktype"
                required='')
                option(value='') Choose a chick type
                option(value='local exotic') local exotic
                option(value='local brolier') local brolier 
            .mb-3.form-check
              input#remember.form-check-input(type='checkbox')
              label.form-check-label(for='exampleCheck1') remember me
            button.btn.btn-primary(type='submit')
              i.fa.fa-sign-in(aria-hidden='true')
              |                                 submit request
script(src='/js/scripts.js')



