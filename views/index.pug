style.
  *{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-style: italic;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  }
  ul{
  list-style: none;
  }
  a{
  text-decoration:none ;
  }
  button{
  cursor: pointer;
  border: none;
  background: none;
  }
  img{
  width: 100%;
  }
  /* navbar styling */
  header{
  position: fixed;
  background-color: rgb(248, 75, 75);
  width: 100%;
  z-index: 5;
  }
  header .navbar{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  }
  .navbar .nav-menu{
  display: flex;
  gap: 10px;
  }
  .navbar .nav-logo .logo-text{
  color: white;
  font-size: larger;
  font-weight: bold;
  }
  .navbar .nav-menu .nav-link{
  color: white;
  padding: 10px 18px;
  font-size: large;
  border-radius: 10px;
  transition: 0.3s ease;
  }
  .navbar .nav-menu .nav-link:hover{
  background-color: rgb(252, 195, 89);
  color: white;
  }
